<div class='container-fluid'>
    <div class="card mx-auto col-md-3 col-10 mt-5"> <img class='mx-auto img-thumbnail' <% if @watch.photo.attached? %>
          <%= cl_image_tag @watch.photo.key, height: 300, width: 400, crop: :fill, class: 'm-1' %>
          <% end %>
        <div class="card-body text-center mx-auto">
            <div class='cvp'>
                <h5 class="card-title font-weight-bold"><%= @watch.name %></h5>
                <h6 class="card-title"><%= @watch.brand %></h6>
                  <% if @watch.user == current_user %>
                    <div class="btn btn-secondary" id="own-watch">
                      <span class="no-hover">Booking Disabled</span>
                      <span class="hover">It's Your Watch!</span>
                    </div>
                  <% else %>
                    <%= link_to "Book now for Â£#{@watch.price}/day", new_watch_booking_path(@watch), class: 'btn btn-success' %>
                  <% end %>
            </div>
      <div class="spacer mb-3"></div>
      <%= link_to "Back to listings", watches_path, class: 'btn btn-outline-success' %>
    </div>
  </div>
</div>

