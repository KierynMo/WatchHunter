<div class="container">
  <div class="row">
    <div class="spacer col-3"></div>
    <div class="watch-detail col-6 justify-content-center" style="text-align: center;">
      <% if @watch.photo.attached? %>
        <%= cl_image_tag @watch.photo.key, height: 300, width: 400, crop: :fill, class: 'm-1' %>
      <% end %>

      <h1><%= @watch.name %></h1>
      <h3><%= @watch.brand %></h3>

      <%= link_to "Book now for Â£#{@watch.price}", new_watch_booking_path(@watch), class: 'btn btn-success' %>
      <div class="spacer mb-1"></div>
      <%= link_to "Back to listings", watches_path, class: 'btn btn-outline-success' %>
    </div>
  </div>
</div>
