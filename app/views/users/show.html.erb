                    <div class="d-flex justify-content-center m-4">
                        <%= link_to user_path do  %>
                          <button type="button" class="btn btn-primary m-2">Delete</button>
                        <% end %>
                        <%= link_to user_path do  %>
                          <button type="button" class="btn btn-primary m-2">Update</button>
                        <% end %>
                    </div>
                </div>
            </tr>
          <% end %>
    </div>
  </div>
</div>
