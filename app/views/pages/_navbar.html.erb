    <img style="height:65px; width:65px;" src="data:image/svg+xml;base64," />
    watchHunter
  </a>

  <%= form_tag watches_path, method: :get do %>
    <div class="d-flex">
      <div><%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Brands..." %>
      </div>
      <div>
      <%= submit_tag "Search Listings", class: "btn btn-outline-success my-2 my-sm-0" %> 
      </div>
    </div>
